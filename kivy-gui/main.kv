#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<MainScreen>
    name: 'main'
    FloatLayout:
        size_hint: None, None
        #pos: 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: root.size

    CustomImage:
        source: "maze3.png"
        allow_stretch: True
        keep_ratio: True

    HoverButton:
        text: ' > Start Game' if self.hovered else ' Start Game'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 1.2
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.current = 'start'


    HoverButton:
        text: ' > How To Play' if self.hovered else ' How To Play'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 1.1
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.transition.direction = 'right'
            root.manager.current = 'instructions'

    HoverButton:
        text: ' > Leaderboards' if self.hovered else ' Leaderboards'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 1
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.transition.direction = 'right'
            root.manager.current = 'leaderboard'

    HoverButton:
        text: ' > Options' if self.hovered else ' Options'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 0.9
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.transition.direction = 'right'
            root.manager.current = 'options'

    HoverButton:
        text: ' > Credits' if self.hovered else ' Credits'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 0.8
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.transition.direction = 'right'
            root.manager.current = 'credits'

    HoverButton:
        text: ' > Exit Game' if self.hovered else ' Exit Game'
        color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 20
        background_color: 0.1, 0.1, 0.1, 1
        background_normal: ''
        center_x: root.center_x * 0.5
        center_y: root.center_y * 0.7
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        size: 300, 40
        size_hint: None, None
        on_press:
            app.root.transition = FadeTransition(duration=0.3)
            root.manager.transition.direction = 'right'
            root.manager.current = 'passCode'

    Label:
        id: title_text
        text: 'Azure Maze'
        color: (0.266, 0.545, 0.788, 1) #100, 137, 161
        font_name: '../assets/PressStart2P-Regular.ttf'
        font_size: 40
        center_x: root.center_x * 0.6
        center_y: root.center_y * 1.4

<LeaderboardScreen>
    name: 'leaderboard'
    FloatLayout:
