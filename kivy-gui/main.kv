            center_y: root.center_y * 0.6

        Button:
            text: '"To End Screen"'
            color: (0.392, 0.537, 0.631 , 1) #100, 137, 161
            font_name: '../assets/PressStart2P-Regular.ttf'
            font_size: 20
            background_color: 0, 0, 0, 0
            background_normal: ''
            center_x: root.center_x
            center_y: root.center_y * 0.9
            size: 200, 40
            size_hint: None, None
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'end'

