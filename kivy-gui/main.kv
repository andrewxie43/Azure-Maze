<LeaderScreen>
    name: 'leaderboard'
    FloatLayout:
        size_hint: None, None
        #pos: 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: root.size

        Label:
            id: title_text
            text: 'Azure Maze'
            font_name: '../assets/PressStart2P-Regular.ttf'
            font_size: 40
            center_x: root.center_x
            center_y: root.center_y * 1.8
