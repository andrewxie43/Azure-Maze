            font_name: '../assets/PressStart2P-Regular.ttf'
            font_size: 40
            center_x: root.center_x
            center_y: root.center_y * 1.4

        Label:
            id: number
            text: 'Ready'
            color: (0.266, 0.545, 0.788, 1) #100, 137, 161
            font_name: '../assets/PressStart2P-Regular.ttf'
            font_size: 80
            center_x: root.center_x
            center_y: root.center_y

<GameScreen>
    name: 'game'
    timer: timer
    on_enter: root.start()
