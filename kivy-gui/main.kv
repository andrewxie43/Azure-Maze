<LeaderScreen>:
    name: 'leaderboard'
    FloatLayout:
        size_hint: 1, 0.5
        canvas:
            Color:
                rgba: 0, 0, 0, .4
            Rectangle:
                size: root.size
                pos: 0, 0
            Color:
                rgba: 0, 0, 0, .8

        Label:
            text: 'Azure Maze'
            font_size: 50

            color: 1, 1, 1, 0
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1

            center_x: root.center_x
            center_y: root.center_y * 1.9

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            Label:
                text: 'Leaderboard'
                font_size: 30

                color: 1, 1, 1, 0
                bold: True
                outline_width: self.font_size * 0.1
                outline_color: 0, 0, 0, 1

                center_x: root.center_x
                center_y: root.center_y * 1.6

            GridLayout:
                cols: 3
                rows: 4
                center_x: root.center_x * 0.66
                center_y: root.center_y * 1.3
                row_force_default: True
                row_default_height: 20
                spacing: 200, 5

                Label:
                    text: 'Place'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: 'Name'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: 'Score'
                    font_size: 20
                    color: 1, 1, 1, 0


                #Player 1
                Label:
                    text: '1st'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: 'Alfa'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: '1:00'
                    font_size: 20
                    color: 1, 1, 1, 0

                #Player 2
                Label:
                    text: '2nd'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: 'Bravo'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: '7:00'
                    font_size: 20
                    color: 1, 1, 1, 0

                #Player 3
                Label:
                    text: '3rd'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: 'Charlie'
                    font_size: 20
                    color: 1, 1, 1, 0
                Label:
                    text: '10:00'
                    font_size: 20
                    color: 1, 1, 1, 0


